@prefix form: <http://lblod.data.gift/vocabularies/forms/> .
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix mu: <http://mu.semte.ch/vocabularies/core/> .
@prefix displayTypes: <http://lblod.data.gift/display-types/> .
@prefix ext: <http://mu.semte.ch/vocabularies/ext/> .
@prefix schema: <http://schema.org/>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix nie: <http://www.semanticdesktop.org/ontologies/2007/01/19/nie#>.

##########################################################
# form
##########################################################
<http://ember-submission-form-fields/source-node> a form:Form, form:TopLevelForm ;
    form:includes ext:authorName;
    sh:group ext:mainPg.

##########################################################
#  property-group
##########################################################
ext:mainPg a form:PropertyGroup;
    sh:description "Questions about author and books";
    sh:name "Questions about author and books" ;
    sh:order 1 .

##########################################################
# Field
##########################################################
ext:authorName a form:Field ;
    sh:name "First name author" ;
    sh:order 10 ;
    sh:path ext:authorName ;
    form:displayType displayTypes:defaultInput ;
    sh:group ext:mainPg .
