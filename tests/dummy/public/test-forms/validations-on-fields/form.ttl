@prefix form: <http://lblod.data.gift/vocabularies/forms/> .
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix mu: <http://mu.semte.ch/vocabularies/core/> .
@prefix fieldGroups: <http://data.lblod.info/field-groups/> .
@prefix fields: <http://data.lblod.info/fields/> .
@prefix displayTypes: <http://lblod.data.gift/display-types/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#>.
@prefix ext: <http://mu.semte.ch/vocabularies/ext/> .
@prefix lblodBesluit: <http://lblod.data.gift/vocabularies/besluit/>.
@prefix schema: <http://schema.org/>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix nie: <http://www.semanticdesktop.org/ontologies/2007/01/19/nie#>.



##########################################################
# form
##########################################################
ext:mainFg a form:FieldGroup.

ext:form a form:Form;
    form:hasFieldGroup ext:mainFg.

##########################################################
#  property-group
##########################################################
ext:mainPg a form:PropertyGroup;
    sh:description "parent property-group, used to group fields and property-groups together";
    sh:name "Overview of all validations on basic form fields" ;
    sh:order 1 .

##########################################################
# Input: Required
##########################################################
ext:inputFieldWithIsRequired a form:Field ;
    sh:name "Simple required input" ;
    sh:order 220 ;
    sh:path ext:inputValue ;
    form:options """{}""" ;
    form:displayType displayTypes:defaultInput ;
    form:validations
        [ a form:RequiredConstraint ;
            form:grouping form:Bag ;
            sh:resultMessage "Dit veld is verplicht." ;
            sh:path ext:inputValue
        ] ;
    form:help """
    <br>
    <pre style="background-color: #EFEFEF; border-radius: 5px;">

    [ a form:RequiredConstraint ;
        form:grouping form:Bag ;
        sh:resultMessage "Dit veld is verplicht." ;
        sh:path ext:inputValue
    ] ;
    </pre>
    """ ;
    sh:group ext:mainPg .

ext:mainFg form:hasField ext:inputFieldWithIsRequired .

##########################################################
# Input: Exact value
##########################################################
ext:inputFieldWithExactValue a form:Field ;
    sh:name "Simple input with exact value `DELETE`" ;
    sh:order 221 ;
    sh:path form:customValue ;
    form:displayType displayTypes:defaultInput ;
    form:validations
        [ a form:ExactValueConstraint ;
            form:grouping form:MatchSome ;
            sh:resultMessage "Type `DELETE`" ;
            sh:path form:customValue ;
            form:customValue "DELETE"
        ] ;
    form:help """
    <br>
    <pre style="background-color: #EFEFEF; border-radius: 5px;">

    [ a form:ExactValueConstraint ;
        form:grouping form:MatchSome ;
        sh:resultMessage "Type `DELETE`" ;
        sh:path form:customValue ;
        form:customValue "DELETE"
    ] ;
    </pre>
    """ ;
    sh:group ext:mainPg .

ext:mainFg form:hasField ext:inputFieldWithExactValue .

##########################################################
# Input: Phone number
##########################################################
ext:inputFieldThatIsAPhoneNumber a form:Field ;
    sh:name "Phone number" ;
    sh:order 222 ;
    sh:path form:defaultCountry ;
    form:displayType displayTypes:defaultInput ;
    form:validations
        [ a form:ValidPhoneNumber ;
            form:grouping form:MatchEvery ;
            sh:resultMessage "e.g. 04 89 13 056" ;
            sh:path form:defaultCountry ;
            form:defaultCountry "BE"
        ] ;
    form:help """
    <br>
    <pre style="background-color: #EFEFEF; border-radius: 5px;">

    [ a form:ValidPhoneNumber ;
        form:grouping form:MatchEvery ;
        sh:resultMessage "e.g. 04 89 13 056" ;
        sh:path form:defaultCountry ;
        form:defaultCountry "BE"
    ] ;
    </pre>
    """ ;
    sh:group ext:mainPg .

ext:mainFg form:hasField ext:inputFieldThatIsAPhoneNumber .

##########################################################
# Input: email
##########################################################
ext:inputFieldThatIsAnEmail a form:Field ;
    sh:name "Email" ;
    sh:order 222 ;
    sh:path form:emailValue ;
    form:displayType displayTypes:defaultInput ;
    form:validations
        [ a form:ValidEmail ;
            form:grouping form:MatchEvery ;
            sh:resultMessage "person@test.com" ;
            sh:path form:emailValue ;
        ] ;
    form:help """
    <br>
    <pre style="background-color: #EFEFEF; border-radius: 5px;">

    [ a form:ValidEmail ;
        form:grouping form:MatchEvery ;
        sh:resultMessage "person@test.com" ;
        sh:path form:emailValue ;
    ] ;
    </pre>
    """ ;
    sh:group ext:mainPg .

ext:mainFg form:hasField ext:inputFieldThatIsAnEmail .

##########################################################
# Numerical input: Positive number
##########################################################
ext:numericalInputField a form:Field ;
    sh:name "Positive numerical input" ;
    sh:order 221 ;
    sh:path ext:numericalInputValue ;
    form:displayType displayTypes:numericalInput ;
    form:validations 
        [
            a form:PositiveNumber ;
            form:grouping form:MatchEvery ;
            sh:path ext:numericalInputValue ;
            sh:order 1 ;
            sh:resultMessage "Needs to be positive"
        ] ;
    form:help """
    <br>
    <pre style="background-color: #EFEFEF; border-radius: 5px;">

    [ a form:PositiveNumber ;
        form:grouping form:MatchEvery ;
        sh:path ext:numericalInputValue ;
        sh:order 1 ;
        sh:resultMessage "Needs to be positive"
    ] ;
    </pre>
    """ ;
    sh:group ext:mainPg .

ext:mainFg form:hasField ext:numericalInputField .
