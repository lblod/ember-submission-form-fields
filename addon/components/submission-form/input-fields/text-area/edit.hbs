<div class="au-o-grid au-o-grid--flush">
  <div class="au-o-grid__item au-u-1-2">
    <AuLabel class="{{if this.errors "au-c-label--error" ""}}"
      for={{this.inputId}}>
      {{@field.label}}
    </AuLabel>
  </div>
  <div class="au-o-grid__item au-u-1-2 au-u-text-right">
    {{#if this.isRequired}}
      <AuPill>Verplicht</AuPill>
    {{/if}}
  </div>
</div>
<AuTextarea
        class=" {{if this.save.isRunning "au-c-textarea--disabled"}} {{if this.submit.isRunning "au-c-textarea--disabled"}} {{if this.delete.isRunning "au-c-textarea--disabled"}}"
        id="{{this.inputId}}"
        @width={{"block"}}
        @value={{this.value}}
  {{on "blur" this.updateValue}}
/>

{{#each this.errors as |error|}}
  <AuHelpText @error={{"error"}}>{{error.resultMessage}}</AuHelpText>
{{/each}}
