<AuLabel class="{{if this.errors "au-c-label--error"}}" for={{this.inputId}}>
  {{@field.label}}
  {{#if this.isRequired}}
    <AuPill>Verplicht</AuPill>
  {{/if}}
</AuLabel>
<PowerSelectMultiple
        @triggerId={{this.inputId}}
        @disabled={{true}}
        @selected={{this.selected}}
        @options={{this.subset}}
        @onChange={{noop}}
        as |concept|>
  {{concept.label}}
</PowerSelectMultiple>
