<div class="au-o-grid au-o-grid--flush">
  <div class="au-o-grid__item au-u-1-2">
    <AuLabel
      class="{{if this.errors "au-c-label--error"}}"
      for={{this.inputId}}>
      {{@field.label}}
    </AuLabel> {{!-- setting ID's (to link the label to the input field) and classes does not work with power select --}}
  </div>
  <div class="au-o-grid__item au-u-1-2 au-u-text-right">
    {{#if this.isRequired}}
      <AuPill>Verplicht</AuPill>
    {{/if}}
  </div>
</div>
<div class="{{if this.errors "ember-power-select--error"}}">
  <PowerSelect
    id="{{this.inputId}}"
    @searchField={{"label"}}
    @searchEnabled={{true}}
    @selected={{this.selected}}
    @options={{this.options}}
    @onClose={{fn (mut this.hasBeenFocused true)}}
    @onChange={{this.updateSelection}}
    @allowClear={{true}}
    as |concept|> {{!-- setting ID's (to link the label to the input field) and classes does not work with power select --}}
    {{concept.label}}
  </PowerSelect>
</div>

{{#each this.errors as |error|}}
  <AuHelpText @error={{"error"}}>{{error.resultMessage}}</AuHelpText>
{{/each}}
