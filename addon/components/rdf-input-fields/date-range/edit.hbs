<div class="js-accordion js-accordion--open">
  <AuLabel>{{@field.label}}</AuLabel>
  <AuButtonGroup @inline="true">
    <AuButton {{ on "click" this.reset }}
        class="{{if (not this.isEnabled) "is-active" }}" @skin="secondary">Alle meldingen</AuButton>
    <AuButton {{ on "click" this.enable }}
        class="{{if this.isEnabled "is-active" }}" @skin="secondary">Specifieke periode</AuButton>
  </AuButtonGroup>

  {{#if this.isEnabled}}
    <div class="accordion__content">
      <WuDateRange
              @fromValue={{this.from}}
              @toValue={{this.to}}
              @onChangeFromValue={{this.updateFrom}}
              @onChangeToValue={{this.updateTo}}
              @fromMinDate="01.01.2012"
              @fromMaxDate="01.01.2050"
              @toMinDate="01.01.2012"
              @toMaxDate="01.01.2050"
      />
    </div>
  {{/if}}
</div>
