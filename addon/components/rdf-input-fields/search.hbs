<AuLabel
  for={{this.inputId}}
  class={{if
    (and (macroGetOwnConfig "helpTextBelowLabel") @field.help)
    "au-u-margin-bottom-none"
  }}
>
  {{@field.label}}
</AuLabel>
<this.HelpText @field={{@field}} />
<AuInput
  @width="block"
  @disabled={{@show}}
  value={{this.value}}
  id={{this.inputId}}
  class="au-u-margin-bottom-tiny"
  {{on "input" (perform this.search)}}
/>