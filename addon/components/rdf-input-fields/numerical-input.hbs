<AuLabel
  @error={{this.hasErrors}}
  @required={{this.isRequired}}
  for={{this.inputId}}
>
  {{@field.label}}
</AuLabel>
<AuInput
  @error={{this.hasErrors}}
  @value={{this.value}}
  @disabled={{@show}}
  type="number"
  id={{this.inputId}}
  lang="nl-BE"
  {{on "change" this.updateValue}}
/>

{{#each this.errors as |error|}}
  <AuHelpText @error={{true}}>{{error.resultMessage}}</AuHelpText>
{{/each}}