{{#unless @inTable}}
  <AuLabel
    @error={{this.hasErrors}}
    @required={{this.isRequired}}
    for={{this.inputId}}
  >
    {{@field.label}}
  </AuLabel>
{{/unless}}
<AuInput
  @error={{this.hasErrors}}
  @disabled={{@show}}
  @width={{if @inTable "block"}}
  id={{this.inputId}}
  lang="nl-BE"
  type="number"
  value={{this.value}}
  {{on "change" this.updateValue}}
/>

{{#each this.errors as |error|}}
  <AuHelpText @error={{true}}>{{error.resultMessage}}</AuHelpText>
{{/each}}