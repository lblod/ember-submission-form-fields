{{#unless @inTable}}
  <AuLabel
    @error={{this.hasErrors}}
    @warning={{this.hasWarnings}}
    @required={{this.isRequired}}
    for={{this.inputId}}
  >
    {{@field.label}}
    {{#if this.maxLength}}
      <AuPill @skin={{unless this.hasRemainingCharacters "error"}}>
        Resterende karakters:
        {{this.remainingCharacters}}
      </AuPill>
    {{/if}}
  </AuLabel>
{{/unless}}

<AuButtonGroup @inline={{true}}>
  {{#if this.showSymbolAtStart}}
    <AuButton
      @skin="primary"
      @disabled={{true}}
    >{{this.currencySymbol}}</AuButton>
  {{/if}}
  <AuInput
    @error={{this.hasErrors}}
    @disabled={{@show}}
    @width={{if @inTable "block"}}
    @warning={{this.hasWarnings}}
    id={{this.inputId}}
    value={{this.value}}
    {{on "blur" this.updateValue}}
  />
  {{#unless this.showSymbolAtStart}}
    <AuButton
      @skin="primary"
      @disabled={{true}}
    >{{this.currencySymbol}}</AuButton>
  {{/unless}}
</AuButtonGroup>

{{#each this.errors as |error|}}
  <AuHelpText @error={{true}}>{{error.resultMessage}}</AuHelpText>
{{/each}}

{{#each this.warnings as |warning|}}
  <AuHelpText @warning={{true}}>{{warning.resultMessage}}</AuHelpText>
{{/each}}