<AuLabel for={{this.id}}>{{@field.label}}</AuLabel>
{{#if this.showAlert}}
  <AuAlert
    @icon="alert-triangle"
    @title="Oeps, dit is een beetje gênant!"
    @skin="warning"
    @size="small"
    @closable={{true}}
    class="au-u-margin-bottom-small"
  >
    <AuHelpText class="au-u-margin-none">
      Onderstaande veld zou automatisch ingevuld moeten worden door één van onze
      processen,
      <br />maar deze lijkt op dit moment niet beschikbaar.
      <br /><strong>Probeer de pagina te herladen of kom later nog eens terug.</strong>
    </AuHelpText>
  </AuAlert>
{{/if}}
<AuButtonGroup @inline={{true}}>
  <AuInput id={{this.id}} @value={{this.value}} @disabled={{true}} />
  <AuButton
    @skin="secondary"
    @icon="document"
    @hideText={{true}}
    {{on "click" this.copy}}
  >Kopieren</AuButton>
</AuButtonGroup>