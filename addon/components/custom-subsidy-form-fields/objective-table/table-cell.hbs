<td headers={{@tableHeaders}}>
  <AuInput
    @disabled={{@disabled}}
    @type="number"
    lang="nl-BE"
    @width="block"
    @value={{this.kilometers}}
    step="any"
    class={{if this.errors "au-c-input--error"}}
    {{on "blur" this.update}}
  />
  {{#each this.errors as |error|}}
    <AuHelpText @error={{true}}>{{error.message}}</AuHelpText>
  {{/each}}
</td>